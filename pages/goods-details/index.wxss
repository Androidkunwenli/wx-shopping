@import "/wxParse/wxParse.wxss";
@import "../../css/share.wxss";

.container {
  background-color: #f2f2f2;
  max-width: 100%;
  height: auto;
}

.img_div {
  width: 100%;
  height: 435rpx;
  opacity: 0.8;
  z-index: 999;
  position: absolute;
  background: #313131 url(https://www.puyuanjingxuan.com/img/wx/timg.png) no-repeat center center;
  background-size: 420rpx 350rpx;
  display: none;
}

.image {
  width: 100%;
  height: 755rpx;
}

.swiper-container {
  width: 100%;
  position: relative;
  margin-bottom: -10rpx;

}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #000;
  border-radius: 50%;
  transition: all 0.6s;
  opacity: 0.3;
}

.swiper-container .dots .dot.active {
  opacity: 0.6;
}

.goods-number {
  width: 77%;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 5rpx;
  padding: 10rpx 0 0 25rpx;
}

.goods-number-row {
  font-size: 30rpx;
}

.goods-info {
  background-color: #fff;
  margin-bottom: 24rpx;
  width: 100%;
}

.goods-info .goods-title {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: #4d4c4c;
  font-weight: 600;
  font-size: 35rpx;
  letter-spacing: 2rpx;
  margin: 10rpx 25rpx;
}

.goods-info .goods-share {
  box-sizing: border-box;
  padding: 0 35rpx;
  font-size: 25rpx;
  line-height: 1.4;
  color: #c00;
  margin-bottom: 28rpx;
}

.goods-number-row .goods-price {
  font-size: 35rpx;
  color: #fff;
  letter-spacing: 2rpx;
  padding: 15rpx 0 0 0;
}

.goods-number-row .goods-price-line {
  color: #fff;
  font-size: 25rpx;
}

.goods-sale {
  color: #fff;
  font-size: 25rpx;
  letter-spacing: 4rpx;
}

.row-arrow {
  width: 100%;
  box-sizing: border-box;
  padding: 0 120rpx 0 35rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  height: 102rpx;
  font-size: 28rpx;
  line-height: 102rpx;
  margin-bottom: 28rpx;
  background: #fff url(https://www.puyuanjingxuan.com/img/wx/arrow-right.png) no-repeat 697rpx center;
  background-size: 18rpx auto;
}

.goods-des-info {
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}

.label-title {
  font-size: 28rpx;
  color: #000;
  padding: 30rpx;
}

.goods-text {
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 56rpx;
  margin-bottom: 30rpx;
}

.des-imgs {
  width: 100%;
}

.des-imgs image {
  width: 100%;
}

.footer-box {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow: 0 0 8rpx 0;
}

.footer-box .contact {
  position: relative;
  width: 150rpx;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  padding-top: 26rpx;
  font-size: 20rpx;
  color: #acacb7;
  box-sizing: border-box;
  background: url("https://www.puyuanjingxuan.com/img/wx/home-on.png") no-repeat center 21rpx;
  background-size: 55rpx auto;
  border-right: 1rpx solid #b9b8b8;
}

.footer-box .shop-cart-btn {
  position: relative;
  width: 150rpx;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  padding-top: 26rpx;
  font-size: 20rpx;
  color: #acacb7;
  box-sizing: border-box;
  background: url("https://www.puyuanjingxuan.com/img/wx/cart.png") no-repeat center 11rpx;
  background-size: 80rpx auto;
}

.shop-num {
  position: absolute;
  color: #fff;
  left: 220rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: red;
  font-size: 30rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 5rpx;
  z-index: 99;
}

.footer-box .join-shop-cart {
  text-align: center;
  width: 250rpx;
  height: 100%;
  line-height: 100rpx;
  background-color: #ffa500;
  color: #fff;
  font-size: 34rpx;
}

.footer-box .now-buy {
  text-align: center;
  height: 100%;
  width: 250rpx;
  line-height: 100rpx;
  background-color: red;
  color: #fff;
  font-size: 34rpx;
}

.show-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 4;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}

.popup-contents {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  z-index: 6;
}

.pop-goods-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}

.pop-img-box {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 26rpx;
}

.pop-img-box .goods-thumbnail {
  width: 120rpx;
  height: 120rpx;
}

.pop-goods-title {
  width: 484rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 26rpx;
  color: #000;
}

.pop-goods-price {
  font-size: 26rpx;
  color: #e64340;
  margin-top: 20rpx;
}

.pop-goods-close {
  width: 36rpx;
  height: 36rpx;
  flex: 1;
  background: url("https://www.puyuanjingxuan.com/img/wx/popup-close.png") no-repeat center center;
  background-size: 36rpx auto;
  align-self: flex-start;
  margin-top: -10rpx;
}

.size-label-box  .label {
  font-size: 26rpx;
  color: #000;
  padding-left: 30rpx;
  padding: 30rpx 0 20rpx 30rpx;
}

.size-label-box .label-item-box {
  display: flex;
  margin-left: 30rpx;
  flex-direction: row;
  flex-wrap: wrap;
}

.size-label-box .label-item {
  font-size: 26rpx;
  color: #000;
  padding: 14rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  margin: 0 20rpx 20rpx 0;
}

.size-label-box .label-item.active {
  color: #e64340;
  border: 1px solid #e64340;
}

.buy-num-box {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx 48rpx 0;
  margin-left: 30rpx;
  border-top: 1px solid #eee;
  margin-top: 30rpx;
  align-items: center;
}

.num-label {
  font-size: 26rpx;
  color: #000;
}

.buy-num-box .num-box {
  display: flex;
}

.buy-num-box .num-box .num-jian, .buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia {
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}

.buy-num-box .num-box .num-input {
  font-size: 28rpx;
}

.buy-num-box .num-box .num-input input {
  height: 100%;
}

.popup-join-btn {
  width: 100%;
  height: 89rpx;
  text-align: center;
  line-height: 89rpx;
  font-size: 34rpx;
  color: #fff;
  background-color: #e64340;
}

.buy-num-box .num-box .hui {
  background-color: #f5f5f9;
}

.sharnum {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffa500;
}

button::after {
  border: none;
}

.shareimg {
  color: #fff;
  background-color: #ffa500;
  font-size: 50rpx;
}

.yushou {
  width: 65%;
  font-size: 27rpx;
  color: #4d4c4c;
  margin: 0 25rpx;
  letter-spacing: 2rpx;
}

.retime {
