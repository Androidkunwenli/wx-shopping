}

.tab {
  float: left;
  width: 33.3333%;
  text-align: center;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #4d4c4c;
}

.topTabSwiper {
  zoom: 1;
  width: 100%;
  background: #fff;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  border-bottom: 1px solid #ff8c00;
