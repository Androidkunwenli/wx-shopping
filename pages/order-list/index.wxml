<view class="container">
  <view class="status-box">
    <view bindtap="statusTap" class="status-label {{index == currentType ? 'active' : ''}}" wx:for-items="{{statusType}}" wx:key="{{index}}" data-index="{{index}}">
      {{item}}
      <view class="{{tabClass[index]}}"></view>
    </view>
  </view>
  <view class="no-order" hidden="{{orderList ? true : false}}">
    <image src="/images/no-order.png" class="no-order-img"></image>
    <view class="text">暂无订单</view>
  </view>
  <view class="order-list" hidden="{{orderList ? false : true}}">
    <view class="a-order" bindtap="orderDetail" data-id="{{item.orderid}}"  wx:for-items="{{orderList}}" wx:key="{{index}}">
      <view class="goods-info" >
        <view class="goods-des">
          <view class="dingdan">订单号：{{item.orderid}} </view>
          <view class="status" wx:if="{{item.is_pay==0}}">未付款</view>
           <view class="status" wx:if="{{item.is_pay==1}}">待提货</view>
            <view class="status" wx:if="{{item.is_pay==2}}">已完成</view>
             <view class="status" wx:if="{{item.is_pay==3}}">取消</view>
        </view>
      </view>
      <view>
        <scroll-view class="goods-img-container" scroll-x="true">
          <view class="img-box" wx:for-items="{{goodsMap[item.id]}}" wx:key="{{index}}">
            <image src="{{item.picture}}" class="goods-img"></image>
          </view>
        </scroll-view>
      </view>
      <view class="beizhu">下单时间： {{item.stime}}</view>
      <view class="beizhu" wx:if="{{item.status && item.status != ''}}">备注： {{item.status}}</view>

      <view class="price-box">
        <view class="total-price">合计：¥ {{item.pay_price}}</view>
        <view class="btn cancel-btn" hidden="{{item.is_pay==0? fslse : true}}" bindtap="cancelOrderTap" data-id="{{item.orderid}}">取消订单</view>
        <view class="btn topay-btn" hidden="{{item.is_pay==0? fslse : true}}" bindtap="toPayTap" data-id="{{item.orderid}}" data-money="{{item.pay_price}}">马上付款</view>
      </view>
    </view>
  </view>
</view>